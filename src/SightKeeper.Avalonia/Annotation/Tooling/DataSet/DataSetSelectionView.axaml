<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dataSet="clr-namespace:SightKeeper.Avalonia.Annotation.Tooling.DataSet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SightKeeper.Avalonia.Annotation.Tooling.DataSet.DataSetSelectionView"
             x:DataType="dataSet:DataSetSelectionDataContext">
    <HeaderedContentControl Header="Data Set">
        <ComboBox SelectedItem="{Binding SelectedDataSet}"
                  ItemsSource="{Binding DataSets}"
                  DisplayMemberBinding="{Binding Name}"
                  PlaceholderText="Not selected"/>
    </HeaderedContentControl>
</UserControl>
