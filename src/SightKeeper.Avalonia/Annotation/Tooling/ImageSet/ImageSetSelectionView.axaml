<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:imageSet="clr-namespace:SightKeeper.Avalonia.Annotation.Tooling.ImageSet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SightKeeper.Avalonia.Annotation.Tooling.ImageSet.ImageSetSelectionView"
             x:DataType="imageSet:ImageSetSelectionDataContext">
    <HeaderedContentControl Header="Image Set">
        <ComboBox ItemsSource="{Binding ImageSets}"
                  SelectedItem="{Binding SelectedImageSet}"
                  DisplayMemberBinding="{Binding Name}"
                  PlaceholderText="Not selected"/>
    </HeaderedContentControl>
</UserControl>
