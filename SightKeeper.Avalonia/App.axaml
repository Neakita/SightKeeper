<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SightKeeper.Avalonia.App"
             xmlns:theme="clr-namespace:Sightful.Avalonia.Theme;assembly=Sightful.Avalonia.Theme"
             xmlns:treeDataGridTheme="clr-namespace:Sightful.Avalonia.TreeDataGrid.Theme;assembly=Sightful.Avalonia.TreeDataGrid.Theme"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://SightKeeper.Avalonia/Assets/Converters.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.Styles>
	    <theme:DefaultTheme/>
	    <treeDataGridTheme:SightfulTreeDataGridTheme/>
	    <!--<FluentTheme/>
	    <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>-->
    </Application.Styles>
    
</Application>