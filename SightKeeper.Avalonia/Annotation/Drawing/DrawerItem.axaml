<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SightKeeper.Avalonia.Annotation.Drawing"
             xmlns:boundingTransform="clr-namespace:SightKeeper.Avalonia.Annotation.Drawing.BoundingTransform"
             xmlns:behaviors="clr-namespace:SightKeeper.Avalonia.Behaviors"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="SightKeeper.Avalonia.Annotation.Drawing.DrawerItem"
             x:DataType="local:BoundedItemDataContext">
    <Interaction.Behaviors>
        <behaviors:AddStylesBehavior Target="{Binding $parent[ListBoxItem]}">
            <behaviors:AddStylesBehavior.Styles>
                <Style Selector="ListBoxItem">
                    <Style.Resources>
                        <local:UIntColorConverter x:Key="ColorConverterAlpha8" AlphaMultiplier="0.8"/>
                        <local:UIntColorConverter x:Key="ColorConverterAlpha4" AlphaMultiplier="0.4"/>
                        <local:UIntColorConverter x:Key="ColorConverterAlpha1" AlphaMultiplier="0.1"/>
                    </Style.Resources>
                    <Setter Property="ZIndex"
                            Value="{Binding Bounding, Converter={x:Static local:ReverseBoundingAreaToIntConverter.Instance}}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="{Binding Tag.Color, Converter={StaticResource ColorConverterAlpha4}}"/>
                    <Style Selector="^:pointerover">
                        <Setter Property="Background" Value="{Binding Tag.Color, Converter={StaticResource ColorConverterAlpha1}}"/>
                        <Style Selector="^ :is(Panel)#ThumbsPanel">
                            <Setter Property="IsVisible" Value="True"/>
                        </Style>
                    </Style>
                    <Style Selector="^:selected">
                        <Setter Property="ZIndex" Value="{x:Static local:DrawerZIndexes.SelectedItemZIndex}"/>
                        <Setter Property="BorderBrush" Value="{Binding Tag.Color, Converter={StaticResource ColorConverterAlpha8}}"/>
                    </Style>
                </Style>
            </behaviors:AddStylesBehavior.Styles>
        </behaviors:AddStylesBehavior>
    </Interaction.Behaviors>
    <Design.DataContext>
        <local:DesignBoundedItemViewModel/>
    </Design.DataContext>
    <Panel>
        <Panel.Resources>
            <local:UIntColorConverter x:Key="LoweredAlphaColorConverter" AlphaMultiplier="0.2"/>
        </Panel.Resources>
        <Border HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Padding="1"
                Background="{Binding Tag.Color, Converter={StaticResource LoweredAlphaColorConverter}}">
            <TextBlock Text="{Binding Tag.Name}"
                       FontSize="12"/>
        </Border>
        <Panel Name="ThumbsPanel"
               Margin="-5">
            <Interaction.Behaviors>
                <boundingTransform:DraggableBoundingBehavior
                    CanvasSize="{Binding $parent[ListBox].Bounds.Size}"
                    Bounding="{Binding Bounding}"
                    ThumbsPanel="ThumbsPanel"
                    ItemContainer="{Binding $parent[ListBoxItem]}"
                    Item="{Binding $parent[UserControl]}"
                    ListBox="{Binding $parent[ListBox]}"/>
            </Interaction.Behaviors>
            <Panel.Styles>
                <Style Selector="Panel#ThumbsPanel">
                    <Setter Property="IsVisible" Value="False"/>
                </Style>
                <Style Selector="Thumb">
                    <Style.Resources>
                        <local:UIntColorConverter x:Key="BorderColorConverter"
                                                  SaturationMultiplier="0.9"
                                                  ValueMultiplier="0.9"/>
                        <local:UIntColorConverter x:Key="BackgroundColorConverter"
                                                  SaturationMultiplier="0.8"
                                                  ValueMultiplier="0.7"/>
                    </Style.Resources>
                    <Setter Property="ClipToBounds" Value="False"/>
                    <Setter Property="UseLayoutRounding" Value="False"/>
                    <Setter Property="Background" Value="{Binding Tag.Color, Converter={StaticResource BackgroundColorConverter}}"/>
                    <Setter Property="BorderBrush" Value="{Binding Tag.Color, Converter={StaticResource BorderColorConverter}}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Width" Value="9"/>
                    <Setter Property="Height" Value="9"/>
                    <Setter Property="CornerRadius" Value="3"/>
                    <Setter Property="Template">
                        <ControlTemplate>
                            <Border
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Background="{TemplateBinding Background}"/>
                        </ControlTemplate>
                    </Setter>
                </Style>
            </Panel.Styles>
            <Thumb HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Cursor="LeftSide"/>
            <Thumb HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Cursor="TopLeftCorner"/>
            <Thumb HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Classes="horizontal"
                   Cursor="TopSide"/>
            <Thumb HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Cursor="TopRightCorner"/>
            <Thumb HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Cursor="RightSide"/>
            <Thumb HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Cursor="BottomRightCorner"/>
            <Thumb HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Classes="horizontal"
                   Cursor="BottomSide"/>
            <Thumb HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Cursor="BottomLeftCorner"/>
        </Panel>
    </Panel>
</UserControl>