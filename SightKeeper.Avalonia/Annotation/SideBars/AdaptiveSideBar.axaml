<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:root="clr-namespace:SightKeeper.Avalonia"
             xmlns:sideBars="clr-namespace:SightKeeper.Avalonia.Annotation.SideBars"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SightKeeper.Avalonia.Annotation.SideBars.AdaptiveSideBar"
             x:DataType="root:ViewModel">
    <ContentControl Content="{Binding}">
        <ContentControl.DataTemplates>
            <DataTemplate DataType="sideBars:TagSelectionSideBarDataContext">
                <sideBars:TagSelectionSideBar/>
            </DataTemplate>
            <DataTemplate DataType="sideBars:PoserSideBarViewModel">
                <sideBars:PoserSideBar/>
            </DataTemplate>
        </ContentControl.DataTemplates>
    </ContentControl>
</UserControl>